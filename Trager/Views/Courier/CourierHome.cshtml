
@model CourierHomeVM
<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
@await Component.InvokeAsync("CourierNavbar")

<div class="container bootstrap snippets bootdeys">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div id="content" class="content p-0">
                <div class="profile-header">
                    <div class="profile-header-cover"></div>
                    <div class="profile-header-content">
                      
                            <div class="profile-header-img mb-4">

                                <img src="@Model.courier.AvatarAdress" class="mb-4" alt="" />

                            </div>
                            <div class="profile-header-info">
                                <h4 class="m-t-sm">@Model.courier.CourierName @Model.courier.CourierLastName</h4>
                            </div>
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="tab-content">
    <div class="tab-pane fade show active" id="#homepage" role="tabpanel">
        <div class="container bootstrap snippets bootdeys">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-12 mt-3">
                    <div class="row">
                        <div class=" col-lg-12 col-md-12 col-sm-12 p-3">
                            <div class="row card card-body ml-0" style="max-width:100%">
                                <form asp-controller="Courier" asp-action="CourierKonum" method="post">
                                    <div class="col-md-12 col-lg-12 col-sm-12" style="border-color:#808080">
                                        <select id="ilad" class="form-control">
                                            <option value="">İl</option>
                                            @foreach (var Il in Model.Il)
                                            {

                                                <option value="@Il.Id">@Il.Ad </option>
                                            }
                                        </select>
                                        <span class="text-danger"></span>
                                    </div>
                                    <div class="col-md-12 col-lg-12 col-sm-12 mt-3" style="border-color:#808080" id="ilce_div">
                                        <select name="IlceId" id="IlceId" class="form-control">
                                            <option value="">İlçe </option>
                                        </select>
                                    </div>

                                    <div class="col-md-6 col-lg-6 col-sm-6 mt-3">
                                        <button type="submit" id="basla" class="btn btn-warning" style="min-width:50%">Başlat</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                                @Html.Partial("_KonumListe", Model)
                           
                     
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-12 mt-3">
                    <h3 class="mt-2" style="color:#ffffff"> Yorumlar </h3>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card mt-3">
                                <div class="card-body">
                                    <div class="border-dark p-2 mb-3">
                                        <div class=" align-items-start">
                                           
                                            @Html.Partial("_CourierComent", Model)

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Il_Ilce.js"></script>


<link href="~/css/CourierHome.css" rel="stylesheet" />
