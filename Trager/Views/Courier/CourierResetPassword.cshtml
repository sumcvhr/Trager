@model CourierResetPasswordModel

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Courier" asp-action="CourierResetPassword" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Token">
            <div class="form-group row">
                <label asp-for="CourierEmail" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="CourierEmail">
                    <span asp-validation-for="CourierEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CourierPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="CourierPassword">
                    <span asp-validation-for="CourierPassword" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Giriş</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}